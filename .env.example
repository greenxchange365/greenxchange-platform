# GreenXchange Platform - Environment Variables
# Copy this file to .env.local and fill in your actual values

# ============================================
# APPLICATION
# ============================================
NEXT_PUBLIC_APP_NAME=GreenXchange
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ============================================
# SUPABASE
# ============================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============================================
# RAZORPAY (Payment Gateway)
# ============================================
NEXT_PUBLIC_RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# ============================================
# GOVERNMENT API INTEGRATIONS
# ============================================

# DigiLocker API
DIGILOCKER_CLIENT_ID=your_digilocker_client_id
DIGILOCKER_CLIENT_SECRET=your_digilocker_client_secret
DIGILOCKER_REDIRECT_URI=http://localhost:3000/api/auth/digilocker/callback

# Aadhaar e-KYC
AADHAAR_API_KEY=your_aadhaar_api_key
AADHAAR_API_SECRET=your_aadhaar_api_secret

# e-Sign (NSDL)
ESIGN_API_KEY=your_esign_api_key
ESIGN_API_SECRET=your_esign_api_secret
ESIGN_CALLBACK_URL=http://localhost:3000/api/esign/callback

# GST Verification API
GST_API_KEY=your_gst_api_key

# ============================================
# COMMUNICATION SERVICES
# ============================================

# WhatsApp Business API
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_whatsapp_business_account_id

# SMS Gateway
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=GRNXCH

# Email (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@greenxchange.in
SENDGRID_FROM_NAME=GreenXchange

# ============================================
# FILE STORAGE
# ============================================
# Using Supabase Storage by default
# Alternatively, you can use AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=greenxchange-documents

# ============================================
# BLOCKCHAIN (Optional - Phase 2)
# ============================================
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_PRIVATE_KEY=your_polygon_private_key
POLYGON_CONTRACT_ADDRESS=your_contract_address

# ============================================
# ANALYTICS & MONITORING
# ============================================
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=your_sentry_dsn

# ============================================
# SECURITY
# ============================================
JWT_SECRET=your_jwt_secret_key_min_32_characters
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_BLOCKCHAIN=false
ENABLE_WHATSAPP_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_REGISTRATION_SERVICE=true
ENABLE_MARKETPLACE=true

# ============================================
# ADMIN
# ============================================
ADMIN_EMAIL=admin@greenxchange.in
ADMIN_PHONE=+91XXXXXXXXXX
